#include <stdio.h>

int main() {
    int N;
    printf("Enter size of matrix (N): ");
    scanf("%d", &N);

    int A[N][N];
    printf("Enter the elements (only 0 or 1):\n");
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            scanf("%d", &A[i][j]);
        }
    }

    int count = 0;
    int row = 0, col = N - 1; 

    while (row < N && col >= 0) {
        if (A[row][col] == 0) {
            count += (col + 1);
            row++; 
        } else {
            col--; 
        }
    }

    printf("Total number of zeros: %d\n", count);

    return 0;
}
